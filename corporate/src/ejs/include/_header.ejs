<%
	const NAVITEMS = [
		{
			name: 'NEWS',
			href: '/news/',
		},
		{
			name: 'SERVICE',
			href: '/service/',
		},
		{
			name: 'WORKS',
			href: '/works/',
		},
		{
			name: 'COMPANY',
			href: '/company/',
		},
		{
			name: 'RECRUIT',
			href: '/recruit/',
		},
		{
			name: 'CONTACT',
			href: '/contact/',
		}
]
%>
<header class="l-header is-transparent">
	<div class="l-header-inner">
		<p class="m-header-logo"><a href="/" class="m-header-logo-link"><img src="<%= IMG %>logo.svg" width="160" height="17" alt="PON DESIGN"></a></p>
		<div class="l-menu">
			<button class="m-menu js-menu"><span class="m-menu-line"></span></button>
		</div>
		<nav class="l-nav">
			<ul class="l-nav-list">
				<% NAVITEMS.forEach((element,index) => { %>
				<li class="m-nav-list-item"><a href="<%- element.href %>" class="m-nav-link"><%- element.name %></a></li>
				<% }); %>
			</ul>
		</nav>
	</div><!-- ./l-header-inner -->
</header><!-- ./l-header -->