  <div class="l-benefits-column">
    <div class="l-benefits-column-row">
      <div class="l-benefits-column-col">
        <div class="l-benefits-sentence">
          <div class="l-heading-3-container">
            <h3 class="m-heading-3"><span class="m-heading-3-sub"><%= item.headingSub %></span><%= item.heading %></h3>
          </div>
          <p class="m-txt m-txt-benefits"><%- item.txt %></p>
        </div>
      </div>
      <div class="l-benefits-column-col">
        <figure class="l-benefits-img">
          <img src="<%= IMG %><%= item.img %>" width="480" height="400" alt="<%= item.imgAlt %>">
        </figure>
      </div>
    </div>
  </div><!-- ./l-benefits-column -->
