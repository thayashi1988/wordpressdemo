<%
  const items = [
    {
      heading: '最新情報をいち早くお届け！',
      headingSub: '新商品・イベント情報など…',
      txt: 'イベントの開催情報、メディア出演、コラボ商品などの最新情報はLINEにていち早くお届けしています！',
      img: 'img_01.jpg',
      imgAlt: '大堀相馬焼の商品一覧'
    },
    {
      heading: 'LINE限定のお得情報も！',
      headingSub: 'クーポンや限定商品なども！',
      txt: 'LINE限定のクーポンの配布や通販サイトでの販売情報などもLINE限定で配信しています。',
      img: 'img_02.jpg',
      imgAlt: '大堀相馬焼の限定商品'
    },
    {
      heading: '制作現場の裏話をお届け！',
      headingSub: '製作工程や工房の様子など…',
      txt: 'あまりメディアやWebには掲載をしていない制作の裏話や窯、工房の様子もお届けしています。',
      img: 'img_03.jpg',
      imgAlt: '大堀相馬焼の制作工程'
    },
  ]
