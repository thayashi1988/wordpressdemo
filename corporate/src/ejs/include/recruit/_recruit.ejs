<%
  const RECRUITITEMS = [
    {
      title: '雇用形態',
      txt: '正社員',
      listMarker: '',
      listTxt: ''
    },
    {
      title: '給与',
      txt: '400万円〜600万円（経験・能力を考慮のうえ優遇）',
      listMarker: '',
      listTxt: ''
    },
    {
      title: '仕事内容',
      txt: 'Webサイトの制作。サイトのデザインとコーディングを担当していただきます。',
      listMarker: '',
      listTxt: ''
    },
    {
      title: '勤務時間',
      txt: '10:00 〜 19:00（実働8時間、休憩1時間）',
      listMarker: '',
      listTxt: ''
    },
    {
      title: '応募資格',
      txt: 'PhotoshopやXDなどのデザインツールの使い方を理解し、コーディングの基礎スキルがある方。<br>実務未経験でも学校や独学で学習した方を歓迎します。',
      listMarker: '・',
      listTxt: [
        'デザインやコーディングを楽しめる方',
        '常にアンテナを張って積極的にトレンドや最新の技術を取り入れる方',
        'お客様と一緒に楽しみながら高い目的を目指せる方',
      ]
    }
  ]
%>
<div class="l-recruit l-recruit-bg">
  <section class="l-section" data-inner-space="none">
    <div class="l-section-inner">
      <div class="l-heading-1-large-container">
        <h1 class="m-heading-1-large">Enjoy<br class="m-hide-pc"> Creation for<br class="m-hide-pc"> Client<span class="m-heading-1-large-sub">楽しむ心が良いモノを生む</span></h1>
      </div>
      <p class="m-txt-top-recruit">心を弾ましながら<br>夢いっぱいのサイトを作ろう！<br>お客様も自分もみんなが幸せになれるように</p>
      <div class="l-recruit-img">
        <img src="/assets/img/recruit/img_recruit_main.png" alt="" width="1440" height="779">
      </div>
    </div>
  </section>
  <section class="l-section">
    <div class="l-section-inner">
      <div class="l-heading-2-container">
        <h2 class="m-heading-2">募集中の職種</h2>
      </div>
      <div class="l-box">
        <div class="l-box-inner">
          <div class="l-heading-3-container">
            <h3 class="m-heading-3">Webデザイナー</h3>
          </div>
          <ul class="l-list-description">
            <% RECRUITITEMS.forEach((elem, index) => { %>
            <li class="l-list-description-item l-list-description-item-underline">
              <dl class="l-description l-description-col">
                <dt class="m-description-title"><%- elem.title %></dt>
                <dd class="m-description-txt">
                  <%- elem.txt %>
                  <% if(elem.listMarker !== ''){ %>
                    <div class="l-list-container">
                      <ul class="l-list">
                        <% elem.listTxt.forEach((listTxt, listIndex) => { %>
                        <li class="l-list-item">
                          <span class="m-list-icon"><%- elem.listMarker %></span>
                          <span class="m-list-body"><%- listTxt %></span>
                        </li>
                        <% }) %>
                      </ul>
                    </div>
                  <% } %>
                </dd>
              </dl>
            </li>
            <% }) %>
          </ul>
          <div class="l-btn-container l-btn-container-col" data-space-top="lg">
            <a href="/" class="m-btn" target="_blank" rel="noopener noreferrer">応募する</a>
            <span class="m-btn-sub-txt">求人サイトへ遷移します</span>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="l-section">
    <div class="l-section-inner">
      <div class="l-heading-2-container" data-space-top="lg">
        <h2 class="m-heading-2">社内ムービー</h2>
      </div>
      <div class="l-video">
        <div class="l-video-inner">
          <iframe width="100%" height="624" src="https://www.youtube.com/embed/hWnsNTgmkd4" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
      </div>
    </div>
  </section>
</div>
